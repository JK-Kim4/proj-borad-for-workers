{{>layout/admin-header}}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">관리자 계정 생성</h1>
    </div>


    <div class="container">
        <div class="card">
            <div class="card-header">
                관리자 계정 생성
            </div>
            <div class="card-body">
                <div class="col-sm-8">
                    <label for="firstName" class="form-label">관리자 계정</label>
                    <div class="row">
                        <div class="col-8">
                            <input type="email" class="form-control" id="inputMail" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>
                        <div class="col-4">
                            <button class="btn btn-success" id="emailRequestButton"> 인증 번호 발송 </button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <label for="username" class="form-label">비밀번호</label>
                        <span style="color:red;">에러 메세지</span>
                        <input type="password" class="form-control" id="inputPassword" placeholder="비밀번호 입 (영 대소문자, 숫자, 특수문자 포함 8 ~ 20자)" required>
                    </div>
                    <div class="col-6">
                        <label for="username" class="form-label">비밀번호 확인</label>
                        <span style="color:red;">에러 메세지</span>
                        <input type="password" class="form-control" id="inputPassword" placeholder="비밀번호 재입력">
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-6">
                        <label for="username" class="form-label">실명(필수)</label>
                        <span style="color:red;">에러 메세지</span>
                        <input type="text" class="form-control" id="inputPassword" placeholder="비밀번호 재입력">
                    </div>
                    <div class="col-6">
                        <label for="username" class="form-label">닉네임(선택)</label>
                        <span style="color:red;">에러 메세지</span>
                        <input type="text" class="form-control" id="inputPassword" placeholder="비밀번호 재입력">
                    </div>
                </div>


                <div class="row mt-3">
                    <div class="col-6">
                        <label for="username" class="form-label">소속</label>
                        <select class="form-select" aria-label="Default select example">
                            <option value="" selected disabled> 소속을 선택해주세요. </option>
                            <option value="CHANGBI"> 창비 </option>
                            <option value="CHANGBI_EDU"> 창비교육 </option>
                            <option value="MEDIA_CHANGBI"> 미디어창비 </option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label for="username" class="form-label">부서</label>
                        <select class="form-select" aria-label="Default select example">
                            <option value="" selected  disabled> 부서를 선택해주세요. </option>
                            <option value="PUBLISHING"> 출판 </option>
                            <option value="IT"> IT </option>
                            <option value="HR"> 인사/총무 </option>
                            <option value="ETC"> 기타 </option>
                        </select>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <button class="btn btn-primary">등록</button>
                <button class="btn btn-dark">뒤로가기</button>
            </div>

        </div>
    </div>

{{>layout/admin-footer}}