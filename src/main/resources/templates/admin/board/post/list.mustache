<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">{{#board}}{{boardName}}{{/board}} 목록 관리</h1>
        <input type="hidden" id="boardId" value="{{#board}}{{boardId}}{{/board}}">
    </div>

    <div class="row mt-3">
        <div class="col-8">
            <div class="d-flex flex-row justify-content-start row">
                <label for="memberSearchKeyword" class="col-auto col-form-label font-weight-bold"> 게시물 제목 검색: </label>
                <div class="col-auto">
                    <input type="text" class="align-self-emd form-control" name="searchKeyword" id="boardSearchKeyword">
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-primary" id="searchButton">검색</button>
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-dark" id="resetButton">초기화</button>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row justify-content-end col-4">
            <!--<button class="btn btn-primary" id="moveBoardInsertPageButton"> 게시판 추가 </button>-->
        </div>
    </div>


    <div class="table-responsive mt-3">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">고유번호</th>
                <th scope="col" class="text-center">게시판</th>
                <th scope="col" class="text-center">제목</th>
                <th scope="col" class="text-center">작성자</th>
                <th scope="col" class="text-center">추천수</th>
                <th scope="col" class="text-center">조회수</th>
                <th scope="col" class="text-center">등록일</th>
                <th scope="col" class="text-center">수정일</th>
            </tr>
            </thead>
            <tbody id="postListBody">

            </tbody>
        </table>
    </div>

