                <div class="col-auto">
                    <button class="btn btn-outline-primary" id="searchButton">회원 검색</button>
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-dark" id="resetButton">초기화</button>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row justify-content-end col-4">
            <button class="btn btn-primary" id="moveMemberInsertPageButton"> 회원 추가 </button>
        </div>
    </div>

    <div class="table-responsive mt-3">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">회원 고유번호</th>
                <th scope="col" class="text-center">아이디</th>
                <th scope="col" class="text-center">이름(닉네임)</th>
                <th scope="col" class="text-center">소속</th>
                <th scope="col" class="text-center">등급</th>
                <th scope="col" class="text-center">가입일</th>
            </tr>
            </thead>
            <tbody id="memberListBody">

            </tbody>
        </table>
    </div>

</main>
