{{>layout/header}}
<style>
    #recentNoticeDesc,#popularPostDiv > h1, h2, h3, h4, h5{
        font-size: 17px !important;
    }

    .carousel-item{
        height: 250px;
    }
    .carousel-item > img {
        height: 100%;
        width: 100%;
    }
</style>
<main class="container col-10">
    <div class="mt-4 mb-4 text-white rounded" >
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/image/banner_sample_01.jpg" alt="First slide">
                </div>
                <div class="carousel-item" >
                    <img class="d-block w-100" src="/image/banner_sample_02.jpg" alt="Second slide">
                </div>
                <div class="carousel-item" >
                    <img class="d-block w-100" src="/image/banner_sample_03.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" id="carouselPrevButton" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" id="carouselNextButton" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>



    <div class="row mb-2">
        <div class="col-md-6" id="recentNoticeDiv">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">최근 공지사항</strong>
                    <p style="font-size: 18px; font-weight: bold" class="mb-0" id="recentNoticeTitle">등록된 공지사항이 없습니다.</p>
                    <div class="mb-1 text-muted" id="recentNoticePostDate">-</div>
                    <p class="card-text mb-auto" id="recentNoticeDesc">-</p>
                    <a class="stretched-link" id="goToRecentNotice">자세히 보기</a>
                </div>
                <div class="col-auto d-none d-lg-block align-self-center" id="recentNoticeThumbnail">
                    <img src="/image/marx.png" width="160" height="200" alt="Thumbnail">
                </div>
            </div>
        </div>
        <div class="col-md-6" id="popularPostDiv">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-success">인기글</strong>
                    <p style="font-size: 18px; font-weight: bold" class="mb-0" id="popularPostTitle">-</p>
                    <div class="mb-1 text-muted" id="popularPostDate">-</div>
                    <p class="mb-auto" id="popularPostDesc">-</p>
                    <a href="#" class="stretched-link" id="goToPopularPost">자세히 보기</a>
                </div>
                <div class="col-auto d-none d-lg-block align-self-center">
                    <img src="/image/marx.png" width="160" height="200" alt="Thumbnail">
                </div>
            </div>
        </div>
        <div id='calendar'></div>
    </div>
    <script src="/js/commonValues.js"></script>
    <script src="/js/index.js"></script>
    <script type="application/javascript">
        $(document).ready(function (){
            $('.carousel').carousel({
                interval: 2000
            });

            $("#carouselNextButton").on("click", function (){
                $('.carousel').carousel('next');
            });

            $("#carouselPrevButton").on("click", function (){
                $('.carousel').carousel('prev');
            });

            index.getIndexData();
        });

        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth'
            });
            calendar.render();
        });
    </script>
{{>layout/footer}}